<%- include('../partials/head',{title:"Edicion"}) %>
<body>
    <header class="header">
        <nav>
    
            <ul>
                <li><a href="/users/admin">Administrador</a></li>
                <li><a href="add">Agregar</a></li>
    
            
        </nav></ul>
        <a href="/">
        <i class="fa-solid fa-person-walking-arrow-right"></i>
        </a>
    </header>

    <main>
        <h1>Area de edicion y depuracion de articulos</h1>
   
   <form action="/product/update/<%= id %>?_method=PUT" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" name="nombre" value= "<%= nombre %>">
    </div>
    <div class="form-group">
        <label for="descripcion">Descripcion</label>
        <textarea name="descripcion" id="descripcion" rows="5"><%= descripcion %></textarea> 
    </div>
    <div class="form-group">
        <label for="precio">Precio</label>
        <input type="text" name="precio" value="<%= precio %>" >
    </div>
    
    <div class="form-group">
        <label for="Categoria">Categoria</label>
        <input type="text" name="categoria" value="<%= categoria %>" >
    </div>
    <div class="boton_edit">
        <button type="submit">Editar</button>
    </div>
</form>
    <div class="boton_remove">
        <form action="/product/remove/<%= id %>?_method=DELETE" method="POST">
        <button type="submit">Eliminar</button>
</form>

    </div>
    </main>

    <footer class="footer">

    </footer>
</body>
</html>